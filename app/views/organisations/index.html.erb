<% if @current_user.organisation_id == nil %>
    <p>You aren't a memeber of any organisation.</p>
    <p>Join an existing one or create a new one.</p>

    <h2>Organisations</h2>
    <ul>
        <% for organisation in Organisation.order(:name).all %>
            <li>
                <%= organisation.name %>
                <%= link_to "Edit", edit_organisation_path(:id => organisation.id)%>
                <%= link_to "Join", join_organisation_path(:id => organisation.id),:method => :put %>
            </li>
        <% end %>
    </ul>

    <h2>Create Organisations</h2>
     <%= form_with model: @organisation, url: organisations_path do |f| %>
        <div>
            <%= f.label :name %><br>
            <%= f.text_field :name %>
        </div>
        <div>
            <%= f.label :hourly_rate %><br>
            <%= f.number_field :hourly_rate %>
        </div>
        <p>
            <%= f.submit 'Create' %>
        </p>
    <%end%>

<% end %>

